{
  "name": "recetas-fullstack",
  "version": "1.0.0",
  "scripts": {
    "client-install": "cd cliente && npm install",
    "server-install": "cd server && npm install",
    "client-build": "cd cliente && npm run build",
    "server-start": "cd server && npm start",
    "start": "npm run server-start",
    "build": "npm run client-install && npm run server-install && npm run client-build",
    "dev": "concurrently \"cd cliente && npm start\" \"cd server && npm run dev\""
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.1"
  },
  "engines": {
    "node": ">=20.x"
  }
}